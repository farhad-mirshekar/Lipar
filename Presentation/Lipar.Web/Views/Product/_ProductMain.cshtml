@model ProductModel
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#FullDescription" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-files-o"></i>
                        <label>@T("Product.Tab.FullDescription")</label>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#Specifications" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-files-o"></i>
                        <label>@T("Product.Tab.Specifications")</label>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#Review" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-comment-o"></i>
                        <label>@T("Product.Tab.Review")</label>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#Question" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-question"></i>
                        <label>@T("Product.Tab.Question")</label>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="FullDescription" class="tab-pane fade show active">
                    <div id="fullDesc" class="mt-3 text-justify">
                        @Html.Raw(Model.FullDescription)
                    </div>

                </div>
                <div id="Specifications" class="tab-pane fade">
                    <ul class="c-params__list mt-3">
                        <li>
                            @if (Model.Weight > 0)
                            {
                                <div class="c-params__list-key">
                                    <span class="block">@T("Product.Field.Weight")</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Math.Round(Model.Weight, 2) گرم</span>
                                </div>
                            }
                        </li>
                        <li>
                            @if (Model.Length > 0)
                            {
                                <div class="c-params__list-key">
                                    <span class="block">@T("Product.Field.Length")</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Math.Round(Model.Length, 2) سانتی متر</span>
                                </div>
                            }
                        </li>
                        <li>
                            @if (Model.Width > 0)
                            {
                                <div class="c-params__list-key">
                                    <span class="block">@T("Product.Field.Width")</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Math.Round(Model.Width, 2) سانتی متر</span>
                                </div>
                            }
                        </li>
                        <li>
                            @if (Model.Height > 0)
                            {
                                <div class="c-params__list-key">
                                    <span class="block">@T("Product.Field.Height")</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Math.Round(Model.Height, 2) سانتی متر</span>
                                </div>
                            }
                        </li>

                    </ul>
                </div>
                <div id="Review" class="tab-pane fade">
                    <div class="col-md-12 mt-3">
                        @await Html.PartialAsync("_ProductComments", Model)
                    </div>
                </div>

                <div id="Question" class="tab-pane fade">
                    <div class="col-md-12 mt-3">
                        @await Component.InvokeAsync("ProductQuestions", new { productId = Model.Id })
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

