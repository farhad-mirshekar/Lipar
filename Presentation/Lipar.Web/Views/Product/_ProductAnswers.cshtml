@model IList<ProductAnswersModel>
@using Lipar.Core.Common
@inject Lipar.Core.IWorkContext _workContext
@{
    var commonHelper = new CommonHelper();
}
@{
    foreach (var productAnswersModel in Model)
    {
        <ul style="list-style:none">
            <li class="mb-3">
                <div class="card m-4 p-3" id="product-comment-@productAnswersModel.Id">
                    <div class="card-header">
                        <div class="float-left d-flex flex-row">
                            <i class="fa fa-user p-1"></i>
                            <span class="card-title p-1">@productAnswersModel.FullName</span>

                            <i class="fa fa-calendar ml-2 p-1"></i>
                            <span class="p-1">@commonHelper.GetPersianDateByFormat(1, productAnswersModel.CreationDate)</span>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.Raw(productAnswersModel.AnswerText)
                    </div>
                </div>
            </li>
        </ul>

    }
}
