@model CommandModel

<div class="text-danger" asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Name" class="control-label">@T("Admin.Command.Field.Name")</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name" />
            </div>
            <div class="form-group col-md-12">
                <label asp-for="SystemName" class="control-label">@T("Admin.Command.Field.SystemName")</label>
                <input type="text" class="form-control" asp-for="SystemName">
                <span class="text-danger" asp-validation-for="SystemName" />
            </div>
            <div class="form-group col-md-12">
                <label asp-for="CommandTypeId" class="control-label">@T("Admin.Command.Field.CommandType")</label>
                <lipar-select asp-for="CommandTypeId" asp-items="@Model.AvailableCommandType" />
            </div>
            <div class="form-group col-md-12">
                <label asp-for="ParentId" class="control-label">@T("Admin.Command.Field.ParentId")</label>
                <lipar-select asp-for="ParentId" asp-items="@Model.AvailableCommands" />
            </div>
        </div>
    </div>
</div>