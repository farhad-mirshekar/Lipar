@model DeliveryDateModel

<input type="hidden" asp-for="Id" />

<div class="form-group">
    <label asp-for="Name" class="control-label">@T("Admin.DeliveryDate.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" required>
    <span class="text-danger" asp-validation-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">@T("Admin.DeliveryDate.Field.Description")</label>
    <input type="text" class="form-control" asp-for="Description">
    <span class="text-danger" asp-validation-for="Description" />
</div>
<div class="form-group">
    <label asp-for="Priority" class="control-label">@T("Admin.DeliveryDate.Field.Priority")</label>
    <input type="number" class="form-control" asp-for="Priority">
    <span class="text-danger" asp-validation-for="Priority" />
</div>
<div class="form-group">
    <label asp-for="EnabledTypeId" class="control-label">@T("Admin.DeliveryDate.Field.EnabledType")</label>
    <lipar-select asp-for="EnabledTypeId" asp-items="@Model.AvailableEnabledType" />
</div>