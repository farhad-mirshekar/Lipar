@model MenuItemModel

<form asp-action="MenuItemCreate" asp-controller="Menu" method="post">
    @Html.HiddenFor(m => m.MenuId)
    <section class="card">
        <div class="card-header">
            <span class="card-title">افزودن آیتم های منو</span>

            <div class="pull-left">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Common.Add.Button")
                </button>
                <a href="@Url.Action("Edit",new {Id = Model.MenuId })" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Common.Back.Button")
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="Name">
                        @T("MenuItem.Field.Name")
                    </label>
                </div>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="Url">
                        @T("MenuItem.Field.Url")
                    </label>
                </div>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="Url" />
                    <span asp-validation-for="Url"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="IconText">
                        @T("MenuItem.Field.IconText")
                    </label>
                </div>
                <div class="col-md-9">
                    <input type="text" class="form-control" asp-for="IconText" />
                    <span asp-validation-for="IconText"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="Priority">
                        @T("MenuItem.Field.Priority")
                    </label>
                </div>
                <div class="col-md-9">
                    <input type="number" class="form-control" asp-for="Priority" />
                    <span asp-validation-for="Priority"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="Parameters">
                        @T("MenuItem.Field.Parameters")
                    </label>
                </div>
                <div class="col-md-9">
                    <input type="number" class="form-control" asp-for="Parameters" />
                    <span asp-validation-for="Parameters"></span>
                </div>
            </div>
            @*<div class="form-group">
                <div class="col-md-3">
                    <label asp-for="ForeignLinkType">
                        @T("Admin.Admin.MenuItem.Field.ForeignLinkType")
                    </label>
                </div>
                <div class="col-md-9">
                    <lipar-select asp-for="ForeignLinkType" asp-items="@Model.AvailableForeignLinkType" />
                </div>
            </div>*@
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="ViewStatusId">
                        @T("MenuItem.Field.ViewStatusType")
                    </label>
                </div>
                <div class="col-md-9">
                    <lipar-select asp-for="ViewStatusId" asp-items="@Model.AvailableViewStatusType" />
                </div>
            </div>
        </div>
    </section>
</form>