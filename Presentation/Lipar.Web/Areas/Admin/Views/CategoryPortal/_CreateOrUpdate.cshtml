@model Lipar.Web.Areas.Admin.Models.Portal.CategoryModel

<input asp-for="Id" type="hidden" />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="Name" class="control-label">@T("Admin.CategoryPortal.Field.Name")</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name" />
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Name" class="control-label">@T("Admin.CategoryPortal.Field.Parent")</label>
                <lipar-select asp-for="ParentId" asp-items="Model.AvailableCategories" />
                <span class="text-danger" asp-validation-for="ParentId" />
            </div>
        </div>
    </div>
</div>