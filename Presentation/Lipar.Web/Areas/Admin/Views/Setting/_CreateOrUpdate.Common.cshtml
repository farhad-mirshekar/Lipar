@model CommonSettingModel

<input asp-for="Id" type="hidden" />
<div class="form-group row">
    <label asp-for="ShowCaptcha" class="col-md-6 control-label">@T("CommonSetting.Field.ShowCaptcha")</label>
    <div class="col-md-1">
        <input type="checkbox" class="form-control" asp-for="ShowCaptcha">
    </div>
</div>
<div class="form-group row">
    <label asp-for="ShowCaptchaInLoginPage" class="col-md-6 control-label">@T("CommonSetting.Field.ShowCaptchaInLoginPage")</label>
    <div class="col-md-1">
        <input type="checkbox" class="form-control" asp-for="ShowCaptchaInLoginPage">
    </div>
</div>
<div class="form-group row">
    <label asp-for="ShowCaptchaInRegisterPage" class="col-md-6 control-label">@T("CommonSetting.Field.ShowCaptchaInRegisterPage")</label>
    <div class="col-md-1">
        <input type="checkbox" class="form-control" asp-for="ShowCaptchaInRegisterPage">
    </div>
</div>