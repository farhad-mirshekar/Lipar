@model DynamicPageDetailModel

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="DynamicPageId" />

<div class="form-group">
    <label asp-for="Name" class="control-label">@T("Admin.DynamicPageDetail.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" required>
    <span class="text-danger" asp-validation-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Title" class="control-label">
        @T("Admin.DynamicPageDetail.Field.Title")
        <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" title="@T("Admin.DynamicPageDetail.Field.Title.Tooltip").Text"></i>
    </label>
    <input type="text" class="form-control" asp-for="Title" required>
    <span class="text-danger" asp-validation-for="Title" />
</div>
<div class="form-group">
    <label asp-for="Title" class="control-label">@T("Admin.DynamicPageDetail.Field.Description")</label>
    <textarea class="form-control" asp-for="Description" rows="2" cols="2"></textarea>
    <span class="text-danger" asp-validation-for="Description" />
</div>
<div class="form-group">
    <label asp-for="MetaKeywords" class="control-label">@T("Admin.DynamicPageDetail.Field.MetaKeywords")</label>
    <input type="text" class="form-control" asp-for="MetaKeywords">
    <span class="text-danger" asp-validation-for="MetaKeywords" />
</div>
<div class="form-group">
    <label asp-for="MetaDescription" class="control-label">@T("Admin.DynamicPageDetail.Field.MetaDescription")</label>
    <input type="text" class="form-control" asp-for="MetaDescription">
    <span class="text-danger" asp-validation-for="MetaDescription" />
</div>
<div class="form-group">
    <label asp-for="Body" class="control-label">@T("Admin.DynamicPageDetail.Field.Body")</label>
    <lipar-froala-editor asp-for="Body" />
    <span class="text-danger" asp-validation-for="Body" />
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="ViewStatusId" class="control-label">@T("Admin.DynamicPageDetail.Field.ViewStatusType")</label>
                <lipar-select asp-for="ViewStatusId" asp-items="@Model.AvailableViewStatusType" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Priority" class="control-label">@T("Admin.DynamicPageDetail.Field.Priority")</label>
                <input type="number" class="form-control" asp-for="Priority" />
                <span class="text-danger" asp-validation-for="Priority" />
            </div>
        </div>
    </div>
</div>