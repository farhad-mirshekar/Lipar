@model DynamicPageModel

<input type="hidden" asp-for="Id" />

<div class="form-group">
    <label asp-for="Name" class="control-label">@T("DynamicPage.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" required>
    <span class="text-danger" asp-validation-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Title" class="control-label">
        @T("DynamicPage.Field.Title")
        <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="top" title="@T("DynamicPageDetail.Field.Title.Tooltip").Text"></i>
    </label>
    <input type="text" class="form-control" asp-for="Title" required>
    <span class="text-danger" asp-validation-for="Title" />
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">@T("DynamicPage.Field.Description")</label>
    <input type="text" class="form-control" asp-for="Description">
    <span class="text-danger" asp-validation-for="Description" />
</div>
<div class="form-group">
    <label asp-for="ViewStatusId" class="control-label">@T("DynamicPage.Field.ViewStatusType")</label>
    <lipar-select asp-for="ViewStatusId" asp-items="@Model.AvailableViewStatusType" />
</div>
<div class="form-group">
    <label asp-for="IncludeInTopMenu" class="control-label">@T("DynamicPage.Field.IncludeInTopMenu")</label>
    <input type="checkbox" asp-for="IncludeInTopMenu" />
</div>
