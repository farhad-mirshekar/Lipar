@model MessageTemplateModel

<input type="hidden" asp-for="Id" />

<div class="form-group">
    <label asp-for="Name" class="control-label">@T("EmailAccount.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" required>
    <span class="text-danger" asp-validation-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Subject" class="control-label">@T("EmailAccount.Field.Subject")</label>
    <input type="text" class="form-control" asp-for="Subject" required>
    <span class="text-danger" asp-validation-for="Subject" />
</div>
<div class="form-group">
    <label asp-for="Template" class="control-label">@T("EmailAccount.Field.Template")</label>
    <lipar-froala-editor asp-for="Template" />
    <span class="text-danger" asp-validation-for="Template" />
</div>
<div class="form-group">
    <label asp-for="EmailAccountId" class="control-label">@T("EmailAccount.Field.EmailAccountId")</label>
    <lipar-select asp-for="EmailAccountId" asp-items="@Model.AvailableEmailAccounts" />
</div>
<div class="form-group row">
    <label asp-for="IsActive" class="col-md-4 control-label">@T("EmailAccount.Field.IsActive")</label>
    <input type="checkbox" class="col-md-1 form-control" asp-for="IsActive" />
</div>