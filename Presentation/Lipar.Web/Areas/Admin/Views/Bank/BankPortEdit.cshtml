@model BankPortModel
@{
    Html.SetActiveMenuItemSystemName("Bank List");
    ViewBag.PageTitle = T("Admin.BankPort.Edit.Card.Title").Text;
}

<form asp-action="BankPortEdit" asp-controller="Bank" method="post">
    <section class="card">
        <div class="card-header clearfix">
            <div class="pull-right">
                <span class="card-title">@T("Admin.BankPort.Edit.Card.Title") - @Model.Name</span>
            </div>

            <div class="pull-left">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Common.Edit.Button")
                </button>
                <a asp-action="Edit" asp-route-id="@Model.BankId" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Common.Back.Button")
                </a>
            </div>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate.BankPort", Model)
        </div>
    </section>

    @Html.AntiForgeryToken()
</form>
