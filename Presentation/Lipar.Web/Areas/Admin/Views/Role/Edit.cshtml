@model RoleModel
@{
    Html.SetActiveMenuItemSystemName("Role List");
    ViewBag.PageTitle = T("Admin.Role.Edit.Card.Title").Text;
}

<form asp-action="Edit" asp-controller="Role" method="post">
    <section class="card">
        <div class="card-header clearfix">
            <div class="pull-right">
                <span class="card-title">@T("Admin.Role.Edit.Card.Title") - @Model.Name</span>
            </div>

            <div class="pull-left">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Common.Edit.Button")
                </button>
                <span id="role-delete" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                    @T("Common.Delete.Button")
                </span>
                <a asp-action="List" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Common.Back.Button")
                </a>
            </div>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
        </div>
    </section>
</form>

<lipar-delete-confirmation asp-model-id="@Model.Id" asp-button-id="role-delete" />