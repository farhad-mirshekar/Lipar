@model ProductAttributeValueModel

<input asp-for="Id" type="hidden" />
<input asp-for="ProductAttributeMappingId" type="hidden" />

<div class="form-group">
    <label asp-for="Name">@T("Admin.ProductAttributeValue.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" />
    <span class="text-danger" asp-validation-for="Name" />
</div>

<div class="form-group">
    <label asp-for="Price">@T("Admin.ProductAttributeValue.Field.Price")</label>
    <input type="number" class="form-control" asp-for="Price" />

</div>
<div class="form-group col-md-12">
    <label asp-for="IsPreSelected" class="control-label">@T("Admin.ProductAttributeValue.Field.IsPreSelected")</label>
    <input type="checkbox" asp-for="IsPreSelected" />
</div>

@{
    if (ViewBag.RefreshPage == true)
    {
        <script>
            try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
            catch (e){}
            window.close();
        </script>
    }

}