@model ProductQuestionModel
@{
    Html.SetActiveMenuItemSystemName("Product List");
    ViewBag.PageTitle = T("Admin.ProductQuestion.Edit.Card.Title").Text;
}

<form asp-action="ProductQuestionEdit" asp-controller="Product" method="post" id="product-question-form">
    <section class="card">
        <div class="card-header clearfix">
            <div class="pull-right">
                <span class="card-title">@T("Admin.ProductQuestion.Edit.Card.Title")</span>
            </div>

            <div class="pull-left">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Common.Edit.Button")
                </button>
                <span id="product-question-delete" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                    @T("Common.Delete.Button")
                </span>
                <a asp-action="ProductQuestionList" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Common.Back.Button")
                </a>
            </div>
        </div>
        <div class="card-body">

            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="ProductName">@T("ProductQuestion.Field.ProductId")</label>
                <span class="text-success text-justify" asp-for="ProductName">@Model.ProductName</span>
            </div>
            <div class="form-group">
                <label asp-for="FullName">@T("ProductQuestion.Field.UserId")</label>
                <span class="text-success text-justify" asp-for="FullName">@Model.FullName</span>
            </div>
            <div class="form-group">
                <label asp-for="ViewStatusId" class="control-label">@T("ProductQuestion.Field.ViewStatusId")</label>
                <lipar-select asp-items="@Model.AvailableViewStatus" asp-for="ViewStatusId">
            </div>
            <div class="form-group">
                <label asp-for="QuestionText">@T("ProductQuestion.Field.QuestionText")</label>
                <textarea class="text-justify form-control" asp-for="QuestionText"></textarea>
            </div>
        </div>
    </section>

    @Html.AntiForgeryToken()
</form>

@await Html.PartialAsync("ProductAnswersList", Model)

<lipar-delete-confirmation asp-button-id="product-question-delete" asp-model-id="@Model.Id" />
