@model ProductAttributeMappingModel
@{
    Html.SetActiveMenuItemSystemName("Product List");
    ViewBag.PageTitle = T("Admin.Product.Add.Card.Title").Text;
}

<form asp-action="ProductAttributeMappingCreate" asp-controller="Product" method="post" id="productattribute-form">
    <section class="card">
        <div class="card-header clearfix">
            <div class="float-left">
                <span class="card-title">@T("Admin.ProductAttributeMapping.Add.Card.Title")</span>
            </div>

            <div class="float-right">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Common.Add.Button")
                </button>
                <a asp-action="Edit" asp-route-Id="@Model.ProductId" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Common.Back.Button")
                </a>
            </div>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_CreateOrUpdate.ProductAttributeMapping", Model)
        </div>
    </section>

    @Html.AntiForgeryToken()
</form>