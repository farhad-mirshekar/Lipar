@model ProductAttributeModel

<input type="hidden" asp-for="Id" />

<div class="form-group">
    <label asp-for="Name" class="control-label">@T("Admin.ProductAttribute.Field.Name")</label>
    <input type="text" class="form-control" asp-for="Name" required>
    <span class="text-danger" asp-validation-for="Name" />
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">@T("Admin.ProductAttribute.Field.Description")</label>
    <input type="text" class="form-control" asp-for="Description" required>
    <span class="text-danger" asp-validation-for="Description" />
</div>