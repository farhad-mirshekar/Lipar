@model StatisticsProductComments

<section class="card">
    <div class="card-header">
        <span>آمار دیدگاه های محصولات</span>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-8 col-form-label col-form-label-sm">تعداد کل</label>
            <div class="col-sm-3">
                <span>@Model.Total</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-8 col-form-label col-form-label-sm">تعداد دیدگاه های تایید شده</label>
            <div class="col-sm-3">
                <span>@Model.TotalApprovedComments</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-8 col-form-label col-form-label-sm">تعداد دیدگاه های تایید نشده</label>
            <div class="col-sm-3">
                <span>@Model.TotalNotApprovedComments</span>
            </div>
        </div>
    </div>
</section>