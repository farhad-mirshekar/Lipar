@model BlogCommentModel
@{
    Html.SetActiveMenuItemSystemName("Blog List");
    ViewBag.PageTitle = T("Admin.BlogComment.Edit.Card.Title").Text;
}

<form asp-action="BlogCommentEdit" asp-controller="Blog" method="post">
    <section class="card">
        <div class="card-header clearfix">
            <div class="pull-right">
                <span class="card-title">@T("Admin.BlogComment.Edit.Card.Title")</span>
            </div>

            <div class="pull-left">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-floppy-o"></i>
                    @T("Admin.Common.Edit")
                </button>
                <a asp-action="List" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left"></i>
                    @T("Admin.Common.Back")
                </a>
            </div>
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            @*<input asp-for="BlogId" type="hidden" />
            <input asp-for="ParentId" type="hidden" />*@

            <div class="form-group">
                <label asp-for="CommentStatusId" class="control-label">@T("Admin.BlogComment.Field.CommentStatusType")</label>
                <lipar-select asp-items="@Model.AvailableCommentStatusType" asp-for="CommentStatusId">
                    <span class="text-danger" asp-validation-for="CommentStatusId" />
            </div>
            <div class="form-group">
                <label asp-for="Body" class="control-label">@T("Admin.BlogComment.Field.Body")</label>
                <textarea class="form-control" asp-for="Body" required></textarea>
                <span class="text-danger" asp-validation-for="Body" />
            </div>
        </div>
    </section>

    @Html.AntiForgeryToken()
</form>
