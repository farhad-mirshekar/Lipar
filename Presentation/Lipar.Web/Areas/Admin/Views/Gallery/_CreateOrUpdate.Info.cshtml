@model GalleryModel

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name" class="control-label">@T("Admin.Gallery.Field.Name")</label>
            <input type="text" class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="MetaKeywords" class="control-label">@T("Admin.Gallery.Field.MetaKeywords")</label>
            <input type="text" class="form-control" asp-for="MetaKeywords">
            <span class="text-danger" asp-validation-for="MetaKeywords" />
        </div>
        <div class="form-group">
            <label asp-for="Body" class="control-label">@T("Admin.Gallery.Field.Body")</label>
            <lipar-froala-editor asp-for="Body" />
            <span class="text-danger" asp-validation-for="Body" />
        </div>
        <div class="form-group">
            <label asp-for="ViewStatusId" class="control-label">@T("Admin.Gallery.Field.ViewStatusType")</label>
            <lipar-select asp-for="ViewStatusId" asp-items="Model.AvailableViewStatusType" />
            <span class="text-danger" asp-validation-for="ViewStatusId" />
        </div>
    </div>
</div> 